.row
  .col-md-12
    = form_tag import_home_theater_infos_path, multipart: true do
      = file_field_tag :file
      %br
      = submit_tag "Import", class: "btn btn-success"
.row
  .col-md-12
    = form_for @dvd do |f|
      - if @dvd.errors.any?
        #error_explanation
          %h2
            = pluralize(@dvd.errors.count, "error")
            prohibited this dvd from being saved:

          %ul
            - @dvd.errors.full_messages.each do |message|
              %li= message

      .actions
        = f.submit
