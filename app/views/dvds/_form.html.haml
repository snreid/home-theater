.row
  .col-md-12
    = form_tag upc_create_dvds_path(location_id: @location.try(:id)), multipart: true do
      = text_field_tag :upc_code, nil, class: "form-control"
      %br
      = submit_tag "Create", class: "btn btn-success"
.row
  .col-md-12
    = form_for @dvd do |f|
      - if @dvd.errors.any?
        #error_explanation
          %h2
            = pluralize(@dvd.errors.count, "error")
            prohibited this dvd from being saved:

          %ul
            - @dvd.errors.full_messages.each do |message|
              %li= message

      .actions
        = f.submit
